# Production Environment Variables for Render/Heroku
# Copy this to .env and update with your actual values

NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection String
# Get this from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mini-ecommerce?retryWrites=true&w=majority

# JWT Secret Key (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# CORS Origin (your frontend URL)
CORS_ORIGIN=https://your-app.vercel.app

# Optional: Additional configurations
NODE_OPTIONS=--max-old-space-size=1024
